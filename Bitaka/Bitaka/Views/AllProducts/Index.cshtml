@model IEnumerable<Bitaka.Models.Products>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<br/>
@using (Html.BeginForm("Index", "AllProducts", FormMethod.Get, new { @class = "form-inline" }))
{
    <p>
        Search: @Html.TextBox("SearchString", null, new { @class = "form-control" })

        <select name="cat" class="form-control" style="width:225px; display:inline-block;">
            <option value="all">----------</option>
            <option value="fashion">Fashion</option>
            <option value="electronics">Electronics</option>
            <option value="vehicles">Vehicles</option>
            <option value="animals">Animals</option>
            <option value="babies">Babies</option>
            <option value="home">Home</option>
        </select>
        <input type="submit" value="Search" class="btn btn-info" />
    </p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.Price, SearchString = ViewBag.SearchString })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Used)
        </th>
        <th>
            @Html.ActionLink("Created", "Index", new { sortOrder = ViewBag.Date, SearchString = ViewBag.SearchString })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Used)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id = item.id }) 
           
        </td>
        
    </tr>
}

</table>
